{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },

  "include": [
    "./src/components/**/*/*.tsx",
    "./src/pages/**/*.tsx",
    "src/pages/_app.tsx"
  ],
  "exclude": ["node_modules"]
}
